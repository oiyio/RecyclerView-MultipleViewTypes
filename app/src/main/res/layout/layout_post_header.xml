<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/standard_margin"
    android:layout_marginEnd="@dimen/standard_margin"
    android:layout_marginTop="@dimen/standard_margin">

    <TextView
        android:id="@+id/textViewProfileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        android:textSize="@dimen/profile_name_text_size"
        android:textColor="@color/profile_name_color"
        android:gravity="center"
        tools:text="@tools:sample/full_names" />

    <TextView
        android:id="@+id/textViewIsLiked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textViewProfileName"
        app:layout_constraintStart_toStartOf="@id/textViewProfileName"
        android:layout_marginTop="4dp"
        android:gravity="center"
        tools:text="Yes"/>

</androidx.constraintlayout.widget.ConstraintLayout>